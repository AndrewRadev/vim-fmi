<% solution.warnings.each do |warning| %>
  <% case warning %>
  <% when '🐁' %>
    <span title="Използвана е мишка, упражнявай позициониране с клавиатурни команди">
      <%= warning %>
    </span>
  <% when '🏹' %>
    <span title="Използвани са стрелкички, вместо тях ползвай hjkl или по-таргетирани движения">
      <%= warning %>
    </span>
  <% end %>
<% end %>
